    #table
        table.table.table-hover
            thead
                tr 
                    th Nombre
                    th apellido
                    th rol
                    th 
            
            tbody 
                each dt in data
                    tr 
                        td=dt.nombre 
                        td=dt.apellido 
                        td=dt.rol
                        td 
                            form.inline(method='post' action= 'users/'+ dt.id + '/delete')
