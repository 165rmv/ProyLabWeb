            a.navbar-brand2(href='/admin_salesman/users/add') Agregar usuario
    - if (success)
        .alert.alert-success
            label(for='error') Se ha eliminado el usuario.
    #centerInd3
        h1=title 
    br
    br
    #table
        table.table.table-hover
            thead
                tr 
                    th Nombre
                    th apellido
                    th rol
                    th 
            
            tbody 
                each dt in data
                    tr 
                        td=dt.nombre 
                        td=dt.apellido 
                        td=dt.rol
                        td 
                            form.inline(method='post' action= 'users/'+ dt.id + '/delete')
                                input(type='hidden' name='id' value= dt.id)
                                button.link-button.btn.btn-danger(type='submit' name='submit_param' value='submit_value' class='btn')
                                    = 'Eliminar'

block scIcon
    link(rel="shortcut icon", href=logoC)