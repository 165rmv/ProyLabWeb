extends ../../layout 

block content
    #centerInd
        h1=title
        br
        a(href='/admin_salesman/inventory/allProducts') Regresar
    
      
    form(action=`/admin_salesman/inventory/allProducts/${data.id}/editProduct` method='POST')
        #table
            table.table 
                tr 
                    td
                        label(for='nombre') Nombre:
                    td
                        input#nombre(type='text' name='nombre' value=data.nombre)
                tr
                    td
                        label(for='precio') Precio (MXN):
                    td
                        input#precio(type='text' maxlength='9' name='precio', value=data.precio)
                tr 
                    td
                        label(for='tipo') Tipo de prenda:
                    td
                        input#tipo(type='text' name='tipo' value=data.tipo)
                tr  
                    td
                        label(for='genero') Genero (H / M):
                    td
                        input#genero(type='text' maxlength='10' name='genero', value=data.genero)
                tr 
                    td
                        label(for='descripcion') Descripcion:
                    td
                        textarea#descripcion(name="descripcion", cols="30", rows="10")=data.descripcion
                tr
                    td 
                    td
                        input.btn(type='submit' value='Actualizar')