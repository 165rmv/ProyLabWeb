extends ../../layout 

block content
    nav.navbar.mb-4.navbar-custom
        .derecha
            img(src=logoC)
            a.navbar-brand.active(href='/admin_salesman/inventory') Inventario
            a.navbar-brand(href='/admin_salesman/sales') Ventas
            - if (userDB.rol == 'duenio')
                a.navbar-brand(href='/admin_salesman/users') Usuarios
        .izquierda 
            a.navbar-brand(href='/logout') Cerrar sesiÃ³n
    nav.navbar.mb-4.navbar-custom2
        .derecha
            a.navbar-brand2(href='/admin_salesman/inventory') Mostrar inventario
            a.navbar-brand2.active2(href='/admin_salesman/inventory/allProducts') Mostrar productos
    - if (errors.length > 0)
        .alert.alert-danger
            label(for='error') Se han encontrado los siguientes errores:
            ul
                each dt in errors 
                    li 
                        label(for='error')="["+dt.param+"]: "+dt.msg
    - if (success)
        .alert.alert-success
            label(for='error') Se ha agregado el producto a la base de datos.
    #centerInd3
        h1=title 
        br
    br
    form(action='/admin_salesman/inventory/addProduct' method='POST')
        #table
            table.table.table-hover
                tr 
                    td
                        label(for='nombre') Nombre:
                    td
                        input#nombre.form-control(type='text' name='nombre')
                tr 
                    td
                        label(for='tipo') Tipo de prenda:
                    td
                        select.form-select.text-center(name="tipo" id="tipo")
                            option(value='short')='Short'
                            option(value='playera')='Playera'
                            option(value='pantalon')='Pantalon'
                            option(value='accesorio')='Accesorio'
                tr 
                    td
                        label(for='genero') Genero:
                    td
                        select.form-select.text-center(name="genero" id="genero")
                            option(value='M')='M'
                            option(value='H')='H'
                tr
                
                    td
                        label(for='precio') Precio (MXN):
                    td
                        input#precio.form-control(type='text' maxlength='9' name='precio')
                tr
                
                    td
                        label(for='descripcion') Descripcion:
                    td
                        textarea#descripcion.form-control(name="descripcion", cols="30", rows="10")
                tr
                
                    td
                        label(for='imagen') Imagen:
                    td
                        input#imagen.form-control(type='file' name='imagen' accept="image/png, image/jpeg")
                tr
                    td 
                    td
                        input.btn.btn-success(type='submit' value='Agregar')

block scIcon
    link(rel="shortcut icon", href=logoC)