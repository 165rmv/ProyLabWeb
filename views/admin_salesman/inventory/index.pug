extends ../../layout

block content 
    nav.navbar.mb-4.navbar-custom
        .derecha
            img(src='../assets/logoC.png')
            a.navbar-brand.active(href='/admin_salesman/inventory') Inventario
            a.navbar-brand(href='/admin_salesman/sales') Ventas
            - if (userDB.rol == 'duenio')
                a.navbar-brand(href='/admin_salesman/users') Usuarios
        .izquierda 
            a.navbar-brand(href='/logout') Cerrar sesi√≥n
    nav.navbar.mb-4.navbar-custom2
        .derecha
            a.navbar-brand2.active2(href='/admin_salesman/inventory') Mostrar inventario
            a.navbar-brand2(href='/admin_salesman/inventory/allProducts') Administrar productos
            - if (userDB.rol != 'cajero')
                a.navbar-brand2(href='/admin_salesman/inventory/add') Agregar producto
    #centerInd3
        h1=title 
    br
    br
    #table
        table.table.table-hover
            thead
                tr 
                    th ID Inventario
                    th ID Producto
                    th Nombre
                    th Tipo de prenda
                    th Cantidad en bodega
                    th Talla
                    - if (userDB.rol != 'cajero')
                        th 
            
            tbody 
                each dt in data
                    tr
                        td=dt.id 
                        td=dt.id_producto 
                        td=dt.nombre
                        td=dt.tipo
                        td=dt.cantidad
                        td=dt.talla
                        - if (userDB.rol != 'cajero')
                            td 
                                a(href = 'inventory/'+ dt.id + '/edit') Editar 

block scIcon
    link(rel="shortcut icon", href="../assets/logoC.png")