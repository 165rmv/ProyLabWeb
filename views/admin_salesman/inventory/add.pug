extends ../../layout 

block content
    nav.navbar.mb-4.navbar-custom
        .derecha
            img(src=logoC)
            a.navbar-brand.active(href='/admin_salesman/inventory') Inventario
            a.navbar-brand(href='/admin_salesman/sales') Ventas
            - if (userDB.rol == 'duenio')
                a.navbar-brand(href='/admin_salesman/users') Usuarios
        .izquierda 
            a.navbar-brand(href='/logout') Cerrar sesiÃ³n
    nav.navbar.mb-4.navbar-custom2
        .derecha
            a.navbar-brand2.active2(href='/admin_salesman/inventory') Mostrar inventario
            a.navbar-brand2(href='/admin_salesman/inventory/allProducts') Mostrar productos
    - if (errors.length > 0)
        .alert.alert-danger
            label(for='error') Se han encontrado los siguientes errores:
            ul
                each dt in errors 
                    li 
                        label(for='error')="["+dt.param+"]: "+dt.msg
    - if (success)
        .alert.alert-success
            label(for='error') Se ha agregado el producto al inventario.
    #centerInd3
        h1=title 
        br
    br
    form(action='/admin_salesman/inventory/add' method='POST')
        #table
            table.table.table-hover 
                tr 
                    td
                        label(for='nombre') Id del producto:
                    td
                        input.form-control(type='number' name='id' id='id')
                tr 
                    td
                        label(for='talla') Talla:
                    td
                        select.form-select.text-center(name="talla" id="talla")
                            option(value='NoAplica')='No Aplica'
                            option(value='XCH')='XCH'
                            option(value='CH')='CH'
                            option(value='M')='M'
                            option(value='G')='G'
                            option(value='XG')='XG'
                tr

                    td
                        label(for='cantidad') Cantidad de prendas:
                    td
                        input#cantidad.form-control(type='number' maxlength='9' name='cantidad')
                tr
                    td 
                    td
                        input.btn.btn-success(type='submit' value='Agregar')

block scIcon
    link(rel="shortcut icon", href=logoC)