extends ../layoutClientes

block content
    nav.navbar.mb-4.navbar-custom
        .derecha
            a(href='/clientes')
                img(src=logoC)
            a.navbar-brand(href='/clientes') Inicio
            a.navbar-brand(href='/clientes/ropa-hombre') Hombre
            a.navbar-brand(href='/clientes/ropa-mujer') Mujer
            a.navbar-brand(href='/clientes/visit-us') Visítanos
            a.navbar-brand(href='/clientes/about-us') Quiénes somos
        .izquierda 
            a.navbar-brand(href='/') 
    br
    br
    #centerIndCli
        h1=title
    .allProductDetail
        .product 
            img(src=dataProduct.img)
            .datosProducto2 
                .desc
                    h2='Descripción:'
                    br
                    label(for='descripcion')=dataProduct.descripcion
                .precio 
                    label(for='precio')='Precio: '+currSign+dataProduct.precio+' '+curr.currency+'.'
                .tallas.text-center
                    - if(dataInventario.length == 0)
                            label(for='talla')='Agotado'
                    - if(dataInventario.length > 0)
                        label(for='precio')='Tallas disponibles en tienda:'
                        .listado
                            each dt in dataInventario 
                                label(for='talla')=dt.talla

        a.btn.btn-primary.mt-4(href='javascript: history.go(-1)') Regresar

block select
    .d-flex.justify-content-center.align-items-center
        .d-inline-flex.p-2.align-items-center.text-moneda
            | Moneda: 
        form(method='post' action= 'info')
            select.form-select.text-center.mx-3(name="currencySelect" id="currency" class='currency')
                option(value='EUR' selected = selectedCur == 1)='EUR'
                option(value='MXN' selected = selectedCur == 2)='MXN'
                option(value='USD' selected = selectedCur == 3)='USD'
                option(value='CLP' selected = selectedCur == 4)='CLP'
                option(value='ARS' selected = selectedCur == 5)='ARS'
            button.link-button.btn.btn-primary(type='submit' name='submit_param' value='submit_value' class='btn')
                                        = 'Cambiar moneda'
block imgLog 
    .centerLog
        img(src=logoC)

block scIcon 
    link(rel="shortcut icon", href=logoC)